<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Nullable>disable</Nullable>
        <RootNamespace>Macabresoft.AvaloniaEx</RootNamespace>
        <LangVersion>default</LangVersion>
        <Title>AvaloniaEx by Macabresoft</Title>
        <Authors>Macabresoft, Brett Story</Authors>
        <Description>A theme and control library for Avalonia.</Description>
        <Copyright>Copyright Â© 2021 - 2022</Copyright>
        <PackageProjectUrl>https://github.com/Macabresoft/Macabresoft.AvaloniaEx</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/Macabresoft/Macabresoft.AvaloniaEx</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Company>Macabresoft</Company>
        <AssemblyVersion>1.0.18.0</AssemblyVersion>
        <FileVersion>1.0.18.0</FileVersion>
        <PackageVersion>1.0.18</PackageVersion>
        <TargetFrameworks>net6.0;</TargetFrameworks>
        <PackageIconUrl>https://github.com/Macabresoft/AvaloniaEx/blob/main/icon.png?raw=true</PackageIconUrl>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="0.10.13" />
        <PackageReference Include="Avalonia.Desktop" Version="0.10.13" />
        <PackageReference Include="Avalonia.ReactiveUI" Version="0.10.13" />
        <PackageReference Include="Macabresoft.Core" Version="1.0.12" />
        <PackageReference Include="Unity" Version="5.11.10" />
    </ItemGroup>
    <ItemGroup>
        <AvaloniaResource Include="Assets\**" />
    </ItemGroup>
    <ItemGroup>
        <Compile Update="Dialogs\BaseDialog.axaml.cs">
            <DependentUpon>BaseDialog.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Dialogs\YesNoCancelDialog.axaml.cs">
            <DependentUpon>YesNoCancelDialog.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Dialogs\WarningDialog.axaml.cs">
            <DependentUpon>WarningDialog.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Dialogs\LicenseDialog.axaml.cs">
            <DependentUpon>LicenseDialog.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Dialogs\TypeSelectionDialog.axaml.cs">
            <DependentUpon>TypeSelectionDialog.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Compile Update="Dialogs\ContentSelectionDialog.axaml.cs">
            <DependentUpon>ContentSelectionDialog.axaml</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
    </ItemGroup>
    <ItemGroup>
      <Content Include="..\icon.png">
        <Link>icon.png</Link>
      </Content>
    </ItemGroup>
</Project>
