<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Nullable>disable</Nullable>
        <RootNamespace>Macabresoft.AvaloniaEx</RootNamespace>
        <LangVersion>default</LangVersion>
        <Title>AvaloniaEx by Macabresoft</Title>
        <Authors>Macabresoft, macabrett, Brett Story</Authors>
        <Description>A theme and control library for Avalonia.</Description>
        <Copyright>Copyright Â© 2021 - 2026</Copyright>
        <PackageProjectUrl>https://github.com/Macabresoft/Macabresoft.AvaloniaEx</PackageProjectUrl>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/Macabresoft/Macabresoft.AvaloniaEx</RepositoryUrl>
        <RepositoryType>git</RepositoryType>
        <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
        <Company>Macabresoft</Company>
        <PackageIcon>icon.png</PackageIcon>
        <AssemblyVersion>2.0.33.0</AssemblyVersion>
        <FileVersion>2.0.33.0</FileVersion>
        <PackageVersion>2.0.33</PackageVersion>
        <TargetFramework>net10.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>
    <ItemGroup>
        <PackageReference Include="Avalonia" Version="11.3.11" />
        <PackageReference Include="Avalonia.Desktop" Version="11.3.11" />
        <PackageReference Include="Avalonia.Themes.Fluent" Version="11.3.11" />
        <PackageReference Include="Macabresoft.Core" Version="2.0.2" />
        <PackageReference Include="ReactiveUI.Avalonia" Version="11.3.8" />
        <PackageReference Include="Unity" Version="5.11.10" />
    </ItemGroup>
    <ItemGroup>
        <AvaloniaResource Include="Assets\**" />
    </ItemGroup>
    <ItemGroup>
        <Content Include="..\icon.png">
            <Link>icon.png</Link>
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </Content>

        <None Include="..\README.md" Pack="true" PackagePath="\"/>
    </ItemGroup>
</Project>
