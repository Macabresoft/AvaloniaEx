<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Styles.Resources>
        <x:Double x:Key="TextControlThemeMinWidth">48</x:Double>
    </Styles.Resources>
    <Style Selector="TextBox">
        <Setter Property="Margin" Value="{DynamicResource StandardMarginAll}" />
    </Style>
    
    <Style Selector="TextBox.Line">
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>
    
    <Style Selector="TextBox.Line:focus /template/ Border#PART_BorderElement">
        <Setter Property="BorderThickness" Value="0,0,0,2" />
    </Style>
</Styles>